
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :body, id: "new_comment", class: "form-control" %>
    </div>
      <div class="rating"></div>

    <div class="form-group">
      <%= f.submit "Send", class: "btn" %>
    </div>
  <% end %>
<% end %>