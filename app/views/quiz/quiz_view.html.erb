
<div class="content">
    <div class="title">
        <h1>Cheese Quiz!</h1>
    </div>
    <div class="quiz-container">
        
        <div class="quiz__question">
            <h2><%= @currentQuestion.inspect %></h2>
        </div>
        
        <% @currentAnswers.each do |questions| %>
        
        <div class="quiz__answer">
            <p><%= questions.inspect %></p>
        </div>
       <% end %>
        <div class="submit">
            <p><%= @submitText.inspect %></p>
        </div>
        <div class="quiz__count">
            <span><%= @count.inspect %> / <%= @totalQuestions.inspect %></span>
        </div>
    </div>
</div>
