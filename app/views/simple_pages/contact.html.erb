
<div class="container panel">
<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true,  placeholder: "Enter Name" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", required: true, :pattern => '^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$', placeholder: "Enter Email" %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", required: true, minlength: 30, placeholder: "Enter Message", rows: 5 %>
  </div>
</div class="form-group">
<%= form.submit "Send", class: "btn" %>
<% end %>
</div>
